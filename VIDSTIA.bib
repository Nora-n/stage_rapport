	pages = {1009--1038},
	file = {arXiv\:astro-ph/9805201 PDF:/home/nora/Zotero/storage/AB4X9KHG/Riess et al. - 1998 - Observational Evidence from Supernovae for an Acce.pdf:application/pdf;arXiv.org Snapshot:/home/nora/Zotero/storage/ENKM4DAA/9805201.html:text/html}
